<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= link_to image_tag(@user.avatar.url, size: Settings.size_avatar),
          @user %>
        <%= @user.fullname %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <%= render "follow_form" if logged_in? && !current_user.is_admin? %>
  </aside>
</div>

