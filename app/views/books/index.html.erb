<h1><%= t "books.index.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag books_path, method: :get do %>
      <%= text_field_tag :search, params[:search],
        placeholder: t("searches.title"), class: "form-control", value: nil %>
      <%= submit_tag t("searches.search"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<hr>
<div class="row">
  <ul>
    <% if @books.any? %>
      <%= render @books %>
    <% end %>
  </ul>
</div>
<%= will_paginate %>
