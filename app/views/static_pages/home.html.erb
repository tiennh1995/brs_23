<% if logged_in? %>
  <div class="row">
    <aside class="col-md-8">
      <h3><%= t "books.index.title" %></h3>
      <section>
        <% if @books.any? %>
          <%= render @books %>
          <%= will_paginate @books %>
        <% end %>
      </section>
    </aside>
    <% unless current_user.is_admin? %>
      <aside class="col-md-4 activity">
        <h3><%= t "activities.title" %></h3>
        <div class="span2 row">
          <ul>
            <% if @activities.any? %>
              <%= render @activities %>
              <%= will_paginate @activities %>
            <% end %>
          </ul>
        </div>
      </aside>
    <% end %>
  </div>
<% else %>
  <div class="center jumbotron">
    <%= link_to t("static_pages.home.signup"),
      signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
