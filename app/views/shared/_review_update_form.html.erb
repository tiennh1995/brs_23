<h3><%= t "reviews.edit" %></h3>
<%= form_for [@book, review], remote: true do |f| %>
  <div class="row review_form">
    <div class="col-md-3">
      <%= f.label :rated, t("reviews.rated") %>
      <%= f.select :rated, options_for_select(Review.rateds),
        {id: "review_rated_#{review.id}"}, {class: "form-control"} %>
    </div>
    <%= render "shared/error_messages", object: review %>
    <div class="col-md-9">
      <%= f.label :content, t("reviews.content") %>
      <%= f.text_area :content, id: "review_field_#{review.id}",
        class: "form-control" %>
    </div>
  </div>
  <div class="col-md-2 pull-right">
    <%= f.submit t("reviews.save"), class: "btn btn-primary" %>
  </div>
<% end %>
