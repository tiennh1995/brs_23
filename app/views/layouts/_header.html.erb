<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.header.title"), root_path ,id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t("layouts.header.home"), admin_root_path %></li>
            <li><%= link_to t("layouts.header.users"), admin_root_path %></li>
            <li><%= link_to t("books.index.title"), admin_books_path %></li>
            <li><%= link_to t("layouts.header.addbook"),
              new_admin_book_url %></li>
          <% else %>
            <li><%= link_to t("layouts.header.home"), root_path %></li>
            <li><%= link_to t("books.index.title"), books_path %></li>
            <li><%= link_to t("layouts.header.users"), users_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("layouts.header.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.is_admin? %>
                <li><%= link_to t("layouts.header.request"),
                  admin_requests_path %></li>
              <% else %>
                <li><%= link_to t("layouts.header.profile"),
                  current_user %></li>
                <li><%= link_to t("layouts.header.settings"),
                edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to t("layouts.header.history"),
                  user_marks_path(current_user, mark: "read") %></li>
                <li><%= link_to t("layouts.header.favorite"),
                  user_marks_path(current_user, mark: "favorite") %></li>
                <li><%= link_to t("layouts.header.request"),
                  new_user_request_path(current_user) %></li>
              <% end %>
              <li>
                <%= link_to t("layouts.header.logout"), logout_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
